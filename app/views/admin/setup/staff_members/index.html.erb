<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Staff Management</h2>
      <p class="text-gray-600">Manage your team members and their access levels</p>
    </div>

    <div class="flex space-x-3">

      <%= link_to new_admin_setup_staff_member_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
        âž• Add Staff Member
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <%= form_with url: admin_setup_staff_members_path, method: :get, local: true, class: "mb-6" do |form| %>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.text_field :search, placeholder: "Search staff...",
                value: params[:search],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.select :role,
                options_for_select([['All Roles', '']] + StaffMember::AVAILABLE_ROLES.map { |role| [role.humanize, role] }, params[:role]),
                {},
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        </div>

        <div>
          <%= form.select :status,
                options_for_select([['All Status', ''], ['Active', 'active'], ['Inactive', 'inactive']], params[:status]),
                {},
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        </div>

        <div class="flex space-x-2">
          <%= form.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
          <%= link_to "Clear", admin_setup_staff_members_path, class: "px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Staff Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Staff Member
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Role
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Contact
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Login Access
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @staff_members.each do |staff| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                    <span class="text-sm font-medium text-blue-800">
                      <%= staff.first_name.first %><%= staff.last_name.first %>
                    </span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900"><%= staff.full_name %></div>
                  <div class="text-sm text-gray-500">
                    Hired <%= staff.hire_date&.strftime('%b %Y') || 'N/A' %>
                  </div>
                </div>
              </div>
            </td>

            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         <%= case staff.role
                             when 'owner' then 'bg-purple-100 text-purple-800'
                             when 'manager' then 'bg-blue-100 text-blue-800'
                             when 'photographer' then 'bg-green-100 text-green-800'
                             when 'editor' then 'bg-yellow-100 text-yellow-800'
                             else 'bg-gray-100 text-gray-800'
                             end %>">
                <%= staff.display_role %>
              </span>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <div><%= staff.email %></div>
              <div class="text-gray-500"><%= staff.phone %></div>
            </td>

            <td class="px-6 py-4 whitespace-nowrap">
              <% if staff.has_login? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  âœ“ Has Access
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  No Access
                </span>
              <% end %>
            </td>

            <td class="px-6 py-4 whitespace-nowrap">
              <% if staff.active? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Inactive
                </span>
              <% end %>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to edit_admin_setup_staff_member_path(staff),
                      class: "text-blue-600 hover:text-blue-900" do %>
                  Edit
                <% end %>

                <%= link_to toggle_status_admin_setup_staff_member_path(staff),
                      method: :patch,
                      class: "text-gray-600 hover:text-gray-900",
                      data: { confirm: "Are you sure?" } do %>
                  <%= staff.active? ? 'Deactivate' : 'Activate' %>
                <% end %>

                <% unless staff.has_active_appointments? %>
                  <%= link_to admin_setup_staff_member_path(staff),
                        method: :delete,
                        class: "text-red-600 hover:text-red-900",
                        data: { confirm: "Are you sure? This action cannot be undone." } do %>
                    Delete
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @staff_members.empty? %>
      <div class="text-center py-12">
        <div class="mx-auto h-12 w-12 text-gray-400 mb-4">
          ðŸ‘¥
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No staff members found</h3>
        <p class="text-gray-600 mb-4">Get started by adding your first team member.</p>
        <%= link_to "Add Staff Member", new_admin_setup_staff_member_path,
              class: "inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
