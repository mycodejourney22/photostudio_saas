<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Staff Member Details</h2>
    <p class="text-gray-600">View information about this team member.</p>
  </div>

  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <div>
      <h3 class="text-sm font-medium text-gray-500">First Name</h3>
      <p class="text-lg font-semibold text-gray-900"><%= @staff_member.first_name %></p>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-500">Last Name</h3>
      <p class="text-lg font-semibold text-gray-900"><%= @staff_member.last_name %></p>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-500">Email</h3>
      <p class="text-gray-800"><%= @staff_member.email %></p>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-500">Phone</h3>
      <p class="text-gray-800"><%= @staff_member.phone.presence || "Not provided" %></p>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-500">Role</h3>
      <p class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">
        <%= @staff_member.role.titleize %>
      </p>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-500">Status</h3>
      <% if @staff_member.active? %>
        <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">
          Active
        </span>
      <% else %>
        <span class="inline-block bg-red-100 text-red-800 text-xs font-semibold px-3 py-1 rounded-full">
          Inactive
        </span>
      <% end %>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to "← Back to Staff Members", admin_setup_staff_members_path,
          class: "text-sm text-gray-600 hover:text-gray-800" %>

    <%= link_to "Edit",
          edit_admin_setup_staff_member_path(@staff_member),
          class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div>
