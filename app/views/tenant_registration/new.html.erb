<div class="max-w-4xl mx-auto mt-10 p-8 bg-white rounded-2xl shadow-md">
  <h1 class="text-2xl font-bold mb-6">Create Your Account</h1>
  
  <%= form_with model: @tenant, url: tenant_registration_path, method: :post, local: true do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Business Information -->
      <div>
        <h2 class="text-lg font-semibold mb-4">Business Information</h2>

        <div class="mb-4">
          <%= f.label :name, "Business or Studio Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" %>
        </div>

        <div class="mb-4">
          <%= f.label :subdomain, "Desired Subdomain", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :subdomain, placeholder: "e.g. sunlight", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
          <p class="text-xs text-gray-500 mt-1">This will be your studio URL (e.g. sunlight.shuttersuites.com)</p>
        </div>

        <div class="mb-4">
          <%= f.label :email, "Business Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :plan_type, "Account Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <label class="flex items-center p-3 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
              <%= f.radio_button :plan_type, "studio", checked: true, class: "form-radio text-indigo-600" %>
              <span class="ml-3 text-sm text-gray-700">Studio (multiple photographers)</span>
            </label>

            <label class="flex items-center p-3 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
              <%= f.radio_button :plan_type, "individual", class: "form-radio text-indigo-600" %>
              <span class="ml-3 text-sm text-gray-700">Individual Photographer (solo)</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Your Information -->
      <div>
        <h2 class="text-lg font-semibold mb-4">Your Information</h2>
        <div class="mb-4">
  <label class="block text-sm font-medium text-gray-700">First Name</label>
  <%= text_field_tag "user[first_name]", nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
</div>

<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700">Last Name</label>
  <%= text_field_tag "user[last_name]", nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
</div>

<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700">Email</label>
  <%= email_field_tag "user[email]", nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
</div>

<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700">Password</label>
  <%= password_field_tag "user[password]", nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
</div>

<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700">Phone (optional)</label>
  <%= telephone_field_tag "user[phone]", nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
</div>

        
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit "Create Account", class: "w-full md:w-auto px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>