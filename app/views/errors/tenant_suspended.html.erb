<!-- app/views/errors/tenant_suspended.html.erb -->
<% content_for :title, "Studio Suspended - ShutterSuites Pro" %>
<% content_for :body_class, "bg-gray-100 min-h-screen" %>

<div class="flex items-center justify-center min-h-screen px-4">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-xl p-8 text-center">
      <!-- Warning Icon -->
      <div class="inline-flex items-center justify-center w-16 h-16 bg-yellow-100 rounded-full mb-6">
        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>

      <h1 class="text-2xl font-bold text-gray-900 mb-4">Studio Temporarily Unavailable</h1>

      <p class="text-gray-600 mb-6">
        This photography studio is currently suspended. Please contact support if you believe this is an error.
      </p>

      <div class="space-y-3">
        <p class="text-sm text-gray-500">
          Studio owners can contact support at:
        </p>
        <p class="text-sm font-medium text-blue-600">
          support@shuttersuites.co
        </p>
      </div>

      <div class="mt-8">
        <%= link_to "Back to ShutterSuites Pro", root_url(subdomain: nil),
              class: "inline-block bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition-colors" %>
      </div>
    </div>
  </div>
</div>
