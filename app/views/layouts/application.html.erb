<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "ShutterSuites Pro" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Load stylesheets in correct order -->
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- JavaScript with importmap -->
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= content_for?(:body_class) ? yield(:body_class) : '' %>">
    <!-- Flash messages -->
    <% if notice %>
      <div id="flash-notice" class="fixed top-4 right-4 z-50 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flash-message">
        <%= notice %>
      </div>
      <script>
        setTimeout(function() {
          const flash = document.getElementById('flash-notice');
          if (flash) flash.remove();
        }, 5000);
      </script>
    <% end %>

    <% if alert %>
      <div id="flash-alert" class="fixed top-4 right-4 z-50 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg flash-message">
        <%= alert %>
      </div>
      <script>
        setTimeout(function() {
          const flash = document.getElementById('flash-alert');
          if (flash) flash.remove();
        }, 5000);
      </script>
    <% end %>

    <!-- Main content -->
    <%= yield %>
  </body>
</html>
