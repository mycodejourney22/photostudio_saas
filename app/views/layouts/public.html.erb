<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "ShutterSuites Pro" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Load stylesheets in correct order -->
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- JavaScript with importmap -->
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= content_for?(:body_class) ? yield(:body_class) : 'bg-gray-50' %>">
    <!-- Flash messages -->
    <% if notice %>
      <div class="fixed top-4 right-4 z-50 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="fixed top-4 right-4 z-50 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg">
        <%= alert %>
      </div>
    <% end %>

    <!-- Main content -->
    <main class="<%= content_for?(:main_class) ? yield(:main_class) : 'container mx-auto mt-8 px-5' %>">
      <%= yield %>
    </main>
  </body>
</html>
