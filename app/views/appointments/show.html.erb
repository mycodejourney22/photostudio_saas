<!-- JavaScript for Staff Assignment -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Staff Assignment Controller
  class StaffAssignmentController {
    constructor(element) {
      this.element = element;
      this.appointmentId = element.dataset.staffAssignmentAppointmentIdValue;
      this.photographerSelect = element.querySelector('[data-staff-assignment-target="photographerSelect"]');
      this.editorSelect = element.querySelector('[data-staff-assignment-target="editorSelect"]');
      this.photographerDisplay = element.querySelector('[data-staff-assignment-target="photographerDisplay"]');
      this.editorDisplay = element.querySelector('[data-staff-assignment-target="editorDisplay"]');

      this.bindEvents();
    }

    bindEvents() {
      // Quick assign buttons
      this.element.addEventListener('click', (e) => {
        if (e.target.closest('[data-action*="quickAssign"]')) {
          e.preventDefault();
          const button = e.target.closest('[data-action*="quickAssign"]');
          const staffId = button.dataset.staffId;
          const assignmentType = button.dataset.assignmentType;
          this.assignStaff(staffId, assignmentType);
        }
      });

      // Unassign buttons
      this.element.addEventListener('click', (e) => {
        if (e.target.closest('[data-action*="unassignStaff"]')) {
          e.preventDefault();
          const button = e.target.closest('[data-action*="unassignStaff"]');
          const assignmentType = button.dataset.assignmentType;
          this.assignStaff('', assignmentType);
        }
      });

      // Select dropdowns
      if (this.photographerSelect) {
        this.photographerSelect.addEventListener('change', (e) => {
          this.assignStaff(e.target.value, 'photographer');
        });
      }

      if (this.editorSelect) {
        this.editorSelect.addEventListener('change', (e) => {
          this.assignStaff(e.target.value, 'editor');
        });
      }
    }

    async assignStaff(staffId, assignmentType) {
      try {
        const response = await fetch(`/appointments/${this.appointmentId}/assign_staff`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({
            staff_member_id: staffId,
            assignment_type: assignmentType
          })
        });

        const result = await response.json();

        if (result.success) {
          // Reload the page to show updated assignments
          window.location.reload();
        } else {
          alert(result.message || 'Assignment failed');
        }
      } catch (error) {
        console.error('Assignment error:', error);
        alert('Assignment failed. Please try again.');
      }
    }
  }

  // Initialize staff assignment controllers
  document.querySelectorAll('[data-controller="staff-assignment"]').forEach(element => {
    new StaffAssignmentController(element);
  });
});
</script>

