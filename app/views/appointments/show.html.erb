<!-- app/views/appointments/show.html.erb -->
<% content_for :title, "Appointment ##{@appointment.id} - #{current_tenant.name}" %>

<div class="min-h-screen bg-gray-50 flex">
  <!-- Sidebar - Desktop -->
  <div class="hidden lg:flex lg:flex-shrink-0">
    <div class="flex flex-col w-64">
      <div class="flex-1 flex flex-col min-h-0 bg-gradient-to-b from-blue-600 to-purple-700">
        <%= render 'shared/sidebar' %>
      </div>
    </div>
  </div>

  <!-- Mobile sidebar overlay -->
  <div class="lg:hidden" data-controller="mobile-navigation">
    <!-- Mobile menu button -->
    <div class="fixed top-4 left-4 z-50">
      <button data-action="mobile-navigation#toggleMenu"
              class="bg-white p-2 rounded-lg shadow-lg text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile backdrop -->
    <div data-mobile-navigation-target="backdrop"
         data-action="click->mobile-navigation#closeOnBackdrop"
         class="hidden fixed inset-0 bg-black bg-opacity-50 z-40"></div>

    <!-- Mobile sidebar -->
    <div data-mobile-navigation-target="menu"
         class="fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-b from-blue-600 to-purple-700 shadow-lg transform -translate-x-full transition-transform duration-300 ease-in-out">
      <%= render 'shared/sidebar' %>
    </div>
  </div>

  <!-- Main content -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 flex-shrink-0">
      <div class="px-4 lg:px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4 ml-12 lg:ml-0">
            <%= link_to appointments_path, class: "text-gray-500 hover:text-gray-700" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            <% end %>
            <div>
              <h1 class="text-xl lg:text-2xl font-bold text-gray-900">
                Appointment #<%= @appointment.id %>
              </h1>
              <p class="text-gray-600 text-sm mt-1">
                <%= @appointment.customer.full_name %> â€¢ <%= @appointment.scheduled_at.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
          </div>

          <div class="flex space-x-3">
            <%= link_to edit_appointment_path(@appointment),
                  class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>

            <% if @sale.nil? %>
              <%= link_to create_sale_appointment_path(@appointment), method: :post,
                    class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
                Create Sale
              <% end %>
            <% else %>
              <%= link_to @sale,
                    class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                View Sale
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-4 lg:p-6">
      <div class="max-w-7xl mx-auto space-y-6">

        <!-- Status Cards Row -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Appointment Status -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-<%= @appointment.status == 'completed' ? 'green' : 'blue' %>-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-<%= @appointment.status == 'completed' ? 'green' : 'blue' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <% if @appointment.status == 'completed' %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    <% else %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    <% end %>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Status</p>
                <p class="text-sm text-gray-500 capitalize"><%= @appointment.status.humanize %></p>
              </div>
            </div>
          </div>

          <!-- Payment Status -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-<%= @appointment.payment_status == 'paid' ? 'green' : 'yellow' %>-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-<%= @appointment.payment_status == 'paid' ? 'green' : 'yellow' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Payment</p>
                <p class="text-sm text-gray-500 capitalize"><%= @appointment.payment_status.humanize %></p>
              </div>
            </div>
          </div>

          <!-- Photographer -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Photographer</p>
                <p class="text-sm text-gray-500"><%= @appointment.photographer_name %></p>
              </div>
            </div>
          </div>

          <!-- Editor -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Editor</p>
                <p class="text-sm text-gray-500"><%= @appointment.editor_name %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

          <!-- Left Column - Appointment Details -->
          <div class="lg:col-span-2 space-y-6">

            <!-- Appointment Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Appointment Details</h2>
              </div>
              <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Customer</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <%= link_to @appointment.customer.full_name, @appointment.customer, class: "text-blue-600 hover:text-blue-800" %>
                    </dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Contact</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <%= @appointment.customer.email %><br>
                      <%= @appointment.customer.phone %>
                    </dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Service Package</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @appointment.service_package_name %></dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Session Type</dt>
                    <dd class="mt-1 text-sm text-gray-900 capitalize"><%= @appointment.session_type.humanize %></dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Duration</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @appointment.duration_minutes %> minutes</dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Price</dt>
                    <dd class="mt-1 text-sm text-gray-900">$<%= number_with_precision(@appointment.price, precision: 2) %></dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Location</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @appointment.location_name %></dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Scheduled</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <%= @appointment.scheduled_at.strftime("%B %d, %Y") %><br>
                      <span class="text-gray-500"><%= @appointment.scheduled_at.strftime("%I:%M %p") %> - <%= @appointment.end_time.strftime("%I:%M %p") %></span>
                    </dd>
                  </div>
                </dl>

                <% if @appointment.notes.present? %>
                  <div class="mt-6">
                    <dt class="text-sm font-medium text-gray-500">Notes</dt>
                    <dd class="mt-1 text-sm text-gray-900 bg-gray-50 p-3 rounded-lg">
                      <%= simple_format(@appointment.notes) %>
                    </dd>
                  </div>
                <% end %>

                <% if @appointment.special_requirements.present? %>
                  <div class="mt-4">
                    <dt class="text-sm font-medium text-gray-500">Special Requirements</dt>
                    <dd class="mt-1 text-sm text-gray-900 bg-yellow-50 p-3 rounded-lg border border-yellow-200">
                      <%= simple_format(@appointment.special_requirements) %>
                    </dd>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Production Workflow -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Production Workflow</h2>
                <div class="flex space-x-2">
                  <% unless @appointment.shoot_completed? %>
                    <button onclick="markShootCompleted()"
                            class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full hover:bg-green-200 transition-colors">
                      Mark Shoot Complete
                    </button>
                  <% end %>
                  <% if @appointment.shoot_completed? && !@appointment.editing_completed? %>
                    <button onclick="markEditingCompleted()"
                            class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full hover:bg-blue-200 transition-colors">
                      Mark Editing Complete
                    </button>
                  <% end %>
                </div>
              </div>
              <div class="p-6">

                <!-- Staff Assignments -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                  <!-- Photographer Assignment -->
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <div class="flex items-center justify-between mb-3">
                      <h3 class="text-sm font-medium text-gray-900">Photographer</h3>
                      <% if @appointment.assigned_photographer.nil? %>
                        <button onclick="openAssignModal('photographer')"
                                class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full hover:bg-blue-200 transition-colors">
                          Assign
                        </button>
                      <% end %>
                    </div>
                    <% if @appointment.assigned_photographer %>
                      <div class="flex items-center">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                          <span class="text-xs font-medium text-purple-600">
                            <%= @appointment.assigned_photographer.first_name.first %>
                          </span>
                        </div>
                        <div>
                          <p class="text-sm font-medium text-gray-900"><%= @appointment.assigned_photographer.full_name %></p>
                          <p class="text-xs text-gray-500">Photographer</p>
                        </div>
                      </div>
                    <% else %>
                      <p class="text-sm text-gray-500 italic">No photographer assigned</p>
                    <% end %>
                  </div>

                  <!-- Editor Assignment -->
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <div class="flex items-center justify-between mb-3">
                      <h3 class="text-sm font-medium text-gray-900">Editor</h3>
                      <% if @appointment.assigned_editor.nil? %>
                        <button onclick="openAssignModal('editor')"
                                class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full hover:bg-blue-200 transition-colors">
                          Assign
                        </button>
                      <% end %>
                    </div>
                    <% if @appointment.assigned_editor %>
                      <div class="flex items-center">
                        <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
                          <span class="text-xs font-medium text-indigo-600">
                            <%= @appointment.assigned_editor.first_name.first %>
                          </span>
                        </div>
                        <div>
                          <p class="text-sm font-medium text-gray-900"><%= @appointment.assigned_editor.full_name %></p>
                          <p class="text-xs text-gray-500">Editor</p>
                        </div>
                      </div>
                    <% else %>
                      <p class="text-sm text-gray-500 italic">No editor assigned</p>
                    <% end %>
                  </div>
                </div>

                <!-- Production Timeline -->
                <div class="space-y-4">
                  <h3 class="text-sm font-medium text-gray-900">Production Timeline</h3>
                  <div class="flow-root">
                    <ul class="-mb-8">
                      <% @production_timeline.each_with_index do |step, index| %>
                        <li>
                          <div class="relative pb-8">
                            <% unless index == @production_timeline.length - 1 %>
                              <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                            <% end %>
                            <div class="relative flex items-start space-x-3">
                              <div class="relative">
                                <div class="h-10 w-10 rounded-full <%= step[:completed] ? 'bg-green-500' : 'bg-gray-300' %> flex items-center justify-center ring-8 ring-white">
                                  <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <% case step[:icon] %>
                                    <% when 'calendar' %>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    <% when 'camera' %>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                    <% when 'edit' %>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    <% when 'check' %>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    <% when 'truck' %>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    <% end %>
                                  </svg>
                                </div>
                              </div>
                              <div class="min-w-0 flex-1">
                                <div>
                                  <p class="text-sm font-medium text-gray-900"><%= step[:title] %></p>
                                  <p class="text-sm text-gray-500"><%= step[:date].strftime("%B %d, %Y at %I:%M %p") if step[:date] %></p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>

                <!-- Production Notes -->
                <% if @appointment.production_notes.present? %>
                  <div class="mt-6">
                    <h3 class="text-sm font-medium text-gray-900 mb-2">Production Notes</h3>
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <pre class="text-sm text-gray-700 whitespace-pre-wrap"><%= @appointment.production_notes %></pre>
                    </div>
                  </div>
                <% end %>

                <!-- Equipment Used -->
                <% if @appointment.equipment_used.present? %>
                  <div class="mt-4">
                    <h3 class="text-sm font-medium text-gray-900 mb-2">Equipment Used</h3>
                    <p class="text-sm text-gray-700 bg-blue-50 p-3 rounded-lg border border-blue-200">
                      <%= @appointment.equipment_used %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>

          </div>

          <!-- Right Column - Actions & Sale Info -->
          <div class="space-y-6">

            <!-- Quick Actions -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
              </div>
              <div class="p-6 space-y-3">

                <!-- Assign Staff Button -->
                <button onclick="openAssignModal('photographer')"
                        class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                  </svg>
                  Assign Staff
                </button>

                <!-- Add Production Note -->
                <button onclick="openNotesModal()"
                        class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Add Production Note
                </button>

                <!-- Set Delivery Date -->
                <button onclick="openDeliveryModal()"
                        class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Set Delivery Date
                </button>
              </div>
            </div>

            <!-- Sale Information -->
            <% if @sale %>
              <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                  <h2 class="text-lg font-semibold text-gray-900">Sale Information</h2>
                </div>
                <div class="p-6">
                  <div class="space-y-3">
                    <div class="flex justify-between">
                      <span class="text-sm text-gray-500">Sale Number</span>
                      <span class="text-sm font-medium text-gray-900"><%= @sale.sale_number %></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-sm text-gray-500">Total Amount</span>
                      <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(@sale.total_amount, precision: 2) %></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-sm text-gray-500">Payment Status</span>
                      <span class="text-xs px-2 py-1 rounded-full <%= @sale.payment_status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= @sale.payment_status.humanize %>
                      </span>
                    </div>
                    <% if @sale.remaining_balance > 0 %>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Remaining</span>
                        <span class="text-sm font-medium text-red-600">$<%= number_with_precision(@sale.remaining_balance, precision: 2) %></span>
                      </div>
                    <% end %>
                  </div>

                  <div class="mt-4 pt-4 border-t border-gray-200">
                    <%= link_to @sale, class: "w-full flex items-center justify-center px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all" do %>
                      View Full Sale
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                  <h2 class="text-lg font-semibold text-gray-900">Sale</h2>
                </div>
                <div class="p-6 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="mt-2 text-sm text-gray-500">No sale created for this appointment</p>
                  <%= link_to create_sale_appointment_path(@appointment), method: :post,
                        class: "mt-4 w-full flex items-center justify-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors" do %>
                    Create Sale
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Delivery Information -->
            <% if @appointment.delivery_date %>
              <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                  <h2 class="text-lg font-semibold text-gray-900">Delivery</h2>
                </div>
                <div class="p-6">
                  <div class="text-center">
                    <div class="w-12 h-12 mx-auto bg-<%= @appointment.overdue_delivery? ? 'red' : 'green' %>-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-<%= @appointment.overdue_delivery? ? 'red' : 'green' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <p class="mt-2 text-sm font-medium text-gray-900">
                      <%= @appointment.delivery_date.strftime("%B %d, %Y") %>
                    </p>
                    <% if @appointment.days_until_delivery && @appointment.days_until_delivery >= 0 %>
                      <p class="text-xs text-gray-500">
                        <%= @appointment.days_until_delivery == 0 ? 'Due today' : "#{@appointment.days_until_delivery} days remaining" %>
                      </p>
                    <% elsif @appointment.overdue_delivery? %>
                      <p class="text-xs text-red-600">
                        <%= pluralize(@appointment.days_until_delivery.abs, 'day') %> overdue
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Staff Assignment Modal -->
<div id="assignModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900" id="modalTitle">Assign Staff</h3>
      <div class="mt-4">
        <select id="staffSelect" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="">Select staff member...</option>
        </select>
      </div>
      <div class="flex justify-end space-x-3 mt-6">
        <button onclick="closeAssignModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition-colors">
          Cancel
        </button>
        <button onclick="assignStaff()" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          Assign
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Production Notes Modal -->
<div id="notesModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900">Add Production Note</h3>
      <div class="mt-4">
        <textarea id="productionNote" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" rows="4" placeholder="Enter production note..."></textarea>
      </div>
      <div class="flex justify-end space-x-3 mt-6">
        <button onclick="closeNotesModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition-colors">
          Cancel
        </button>
        <button onclick="addProductionNote()" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          Add Note
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delivery Date Modal -->
<div id="deliveryModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900">Set Delivery Date</h3>
      <div class="mt-4">
        <input type="date" id="deliveryDate" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" value="<%= @appointment.delivery_date&.strftime('%Y-%m-%d') %>">
      </div>
      <div class="flex justify-end space-x-3 mt-6">
        <button onclick="closeDeliveryModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition-colors">
          Cancel
        </button>
        <button onclick="updateDeliveryDate()" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          Update Date
        </button>
      </div>
    </div>
  </div>
</div>

<script>
let currentAssignmentType = '';

// Staff Assignment Functions
function openAssignModal(type) {
  currentAssignmentType = type;
  const modal = document.getElementById('assignModal');
  const title = document.getElementById('modalTitle');
  const select = document.getElementById('staffSelect');

  title.textContent = `Assign ${type.charAt(0).toUpperCase() + type.slice(1)}`;

  // Clear and populate select options
  select.innerHTML = '<option value="">Select staff member...</option>';

  <% if @photographers.present? %>
    if (type === 'photographer') {
      <% @photographers.each do |photographer| %>
        select.innerHTML += '<option value="<%= photographer.id %>"><%= photographer.full_name %></option>';
      <% end %>
    }
  <% end %>

  <% if @editors.present? %>
    if (type === 'editor') {
      <% @editors.each do |editor| %>
        select.innerHTML += '<option value="<%= editor.id %>"><%= editor.full_name %></option>';
      <% end %>
    }
  <% end %>

  modal.classList.remove('hidden');
}

function closeAssignModal() {
  document.getElementById('assignModal').classList.add('hidden');
  currentAssignmentType = '';
}

function assignStaff() {
  const staffId = document.getElementById('staffSelect').value;
  if (!staffId) {
    alert('Please select a staff member');
    return;
  }

  fetch('<%= assign_staff_appointment_path(@appointment) %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({
      staff_member_id: staffId,
      assignment_type: currentAssignmentType
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload(); // Refresh page to show updated assignment
    } else {
      alert(data.message || 'Error assigning staff');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error assigning staff');
  });
}

// Production Status Functions
function markShootCompleted() {
  updateProductionStatus('mark_shoot_completed');
}

function markEditingCompleted() {
  updateProductionStatus('mark_editing_completed');
}

function updateProductionStatus(actionType) {
  fetch('<%= update_production_appointment_path(@appointment) %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({
      action_type: actionType
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload(); // Refresh page to show updated status
    } else {
      alert(data.message || 'Error updating status');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error updating status');
  });
}

// Production Notes Functions
function openNotesModal() {
  document.getElementById('notesModal').classList.remove('hidden');
}

function closeNotesModal() {
  document.getElementById('notesModal').classList.add('hidden');
  document.getElementById('productionNote').value = '';
}

function addProductionNote() {
  const note = document.getElementById('productionNote').value;
  if (!note.trim()) {
    alert('Please enter a note');
    return;
  }

  fetch('<%= update_production_appointment_path(@appointment) %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({
      action_type: 'add_production_notes',
      note: note
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload(); // Refresh page to show new note
    } else {
      alert(data.message || 'Error adding note');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error adding note');
  });
}

// Delivery Date Functions
function openDeliveryModal() {
  document.getElementById('deliveryModal').classList.remove('hidden');
}

function closeDeliveryModal() {
  document.getElementById('deliveryModal').classList.add('hidden');
}

function updateDeliveryDate() {
  const date = document.getElementById('deliveryDate').value;
  if (!date) {
    alert('Please select a delivery date');
    return;
  }

  fetch('<%= update_production_appointment_path(@appointment) %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({
      action_type: 'update_delivery_date',
      delivery_date: date
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload(); // Refresh page to show updated date
    } else {
      alert(data.message || 'Error updating delivery date');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error updating delivery date');
  });
}

// Close modals when clicking outside
window.onclick = function(event) {
  const assignModal = document.getElementById('assignModal');
  const notesModal = document.getElementById('notesModal');
  const deliveryModal = document.getElementById('deliveryModal');

  if (event.target === assignModal) {
    closeAssignModal();
  }
  if (event.target === notesModal) {
    closeNotesModal();
  }
  if (event.target === deliveryModal) {
    closeDeliveryModal();
  }
}
</script>
