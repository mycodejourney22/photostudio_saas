<% content_for :title, "Dashboard - \#{current_tenant.name}" %>

<div class="min-h-screen bg-gray-50 flex">
  <!-- Sidebar -->
  <div class="hidden lg:flex lg:flex-shrink-0">
    <div class="flex flex-col w-64">
      <div class="flex-1 flex flex-col min-h-0 bg-gradient-to-b from-blue-600 to-purple-700">
        <%= render 'shared/sidebar' %>
      </div>
    </div>
  </div>
<% if current_tenant.individual? %>
  <!-- Main content -->
  <div class="flex-1 flex flex-col">
    <main class="flex-1 overflow-y-auto p-6" data-controller="dashboard-chart"
          data-dashboard-chart-revenue-data-value='<%= raw @revenue_data.to_json %>'
          data-dashboard-chart-bookings-data-value='<%= raw @bookings_data.to_json %>'
          data-dashboard-chart-update-url-value="<%= dashboard_stats_path %>">

      
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= current_user.first_name %>!</h1>
        <p class="text-gray-600 mb-6">Here's how your photography business is performing:</p>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-500">Today's Bookings</p>
            <p class="text-2xl font-bold text-indigo-700" data-stat="today-bookings"> <%=  @todays_appointments_count %> </p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-500">This Week's Revenue</p>
            <p class="text-2xl font-bold text-green-600" data-stat="week-revenue">$0</p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-500">Active Customers</p>
            <p class="text-2xl font-bold text-purple-700" data-stat="active-customers">0</p>
          </div>
        </div>

        <!-- Charts -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div class="bg-white p-4 rounded-lg shadow">
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Monthly Revenue</h2>
            <canvas data-dashboard-chart-target="revenueChart" height="200"></canvas>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Booking Status</h2>
            <canvas data-dashboard-chart-target="bookingsChart" height="200"></canvas>
          </div>
        </div>

      <% else %>
        <!-- Studio dashboard partial -->
        <%= render 'dashboard/full_dashboard' %>
      <% end %>

    </main>
  </div>
</div>
