<!-- app/views/dashboard/index.html.erb -->
<% content_for :title, "Dashboard - #{current_tenant.name}" %>
<% content_for :body_class, "bg-gray-50" %>

<div class="min-h-screen bg-gray-50">
  <!-- Sidebar -->
  <div class="fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-b from-blue-600 to-purple-700 shadow-lg">
    <%= render 'shared/sidebar' %>
  </div>

  <!-- Main content -->
  <div class="ml-64">
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">
              Welcome back, <%= current_user.first_name %>!
            </h1>
            <p class="text-gray-600 mt-1">Here's what's happening at <%= current_tenant.name %> today</p>
          </div>

          <div class="flex items-center space-x-4">
            <%= link_to new_appointment_path,
                  class: "btn btn-success" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              New Booking
            <% end %>

            <%= link_to new_customer_path,
                  class: "btn btn-primary" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Add Customer
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Dashboard Content -->
    <main class="px-6 py-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Today's Bookings -->
        <div class="dashboard-stat">
          <div class="dashboard-stat-value"><%= @stats.today_bookings %></div>
          <div class="dashboard-stat-label">Today's Bookings</div>
        </div>

        <!-- This Week's Revenue -->
        <div class="dashboard-stat" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
          <div class="dashboard-stat-value">$<%= number_with_delimiter(@stats.week_revenue) %></div>
          <div class="dashboard-stat-label">This Week's Revenue</div>
        </div>

        <!-- Active Customers -->
        <div class="dashboard-stat" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
          <div class="dashboard-stat-value"><%= @stats.active_customers %></div>
          <div class="dashboard-stat-label">Active Customers</div>
        </div>

        <!-- Customer Satisfaction -->
        <div class="dashboard-stat" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
          <div class="dashboard-stat-value"><%= @stats.customer_satisfaction %>%</div>
          <div class="dashboard-stat-label">Customer Satisfaction</div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Today's Schedule -->
        <div class="dashboard-card">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Today's Schedule</h2>
            <%= link_to appointments_path, class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
              View All
            <% end %>
          </div>

          <% if @today_appointments&.any? %>
            <div class="space-y-4">
              <% @today_appointments.each do |appointment| %>
                <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                  <!-- Status indicator -->
                  <div class="w-1 h-12 rounded-full mr-4 <%= appointment_status_color(appointment.status) %>"></div>

                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <div>
                        <p class="font-semibold text-gray-900">
                          <%= appointment.scheduled_at.strftime("%I:%M %p") %> - <%= appointment.customer.full_name %>
                        </p>
                        <p class="text-sm text-gray-600">
                          <%= appointment.session_type.humanize %> â€¢ <%= appointment.status.humanize %>
                        </p>
                      </div>
                      <div class="text-right">
                        <p class="text-sm font-medium text-gray-900">$<%= appointment.price %></p>
                        <% if appointment.studio %>
                          <p class="text-xs text-gray-500"><%= appointment.studio.name %></p>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="mt-4 text-center">
              <%= link_to appointments_path(date: Date.current),
                    class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
                + Add Walk-in
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <p class="mt-2 text-gray-600">No appointments scheduled for today</p>
              <%= link_to "Schedule First Appointment", new_appointment_path,
                    class: "mt-4 inline-block btn btn-primary" %>
            </div>
          <% end %>
        </div>

        <!-- Quick Stats -->
        <div class="dashboard-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Quick Stats</h2>

          <div class="space-y-6">
            <!-- Bookings Usage -->
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Bookings</span>
                <span class="font-medium">
                  <%= @stats.monthly_bookings_usage[:current] %>/<%= @stats.monthly_bookings_usage[:limit] %>
                </span>
              </div>
              <div class="mt-2 bg-gray-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full"
                     style="width: <%= [@stats.monthly_bookings_usage[:percentage], 100].min %>%"></div>
              </div>
            </div>

            <!-- Storage Usage -->
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Storage Used</span>
                <span class="font-medium">
                  <%= number_to_human_size(@stats.storage_usage[:current]) %>/<%= number_to_human_size(@stats.storage_usage[:limit]) %>
                </span>
              </div>
              <div class="mt-2 bg-gray-200 rounded-full h-2">
                <div class="bg-green-600 h-2 rounded-full"
                     style="width: <%= [@stats.storage_usage[:percentage], 100].min %>%"></div>
              </div>
            </div>

            <!-- Team Members -->
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Team Members</span>
                <span class="font-medium">
                  <%= @stats.team_members_usage[:current] %>/<%= @stats.team_members_usage[:limit] %>
                </span>
              </div>
              <div class="mt-2 bg-gray-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full"
                     style="width: <%= [@stats.team_members_usage[:percentage], 100].min %>%"></div>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="pt-4 border-t border-gray-200">
              <h3 class="text-sm font-medium text-gray-900 mb-3">Quick Actions</h3>
              <div class="grid grid-cols-2 gap-3">
                <%= link_to customers_path,
                      class: "p-3 bg-blue-50 rounded-lg text-center hover:bg-blue-100 transition-colors" do %>
                  <div class="text-blue-600 font-medium text-sm">View Customers</div>
                <% end %>

                <%= link_to appointments_path,
                      class: "p-3 bg-green-50 rounded-lg text-center hover:bg-green-100 transition-colors" do %>
                  <div class="text-green-600 font-medium text-sm">All Bookings</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
