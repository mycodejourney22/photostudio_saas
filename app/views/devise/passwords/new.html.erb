<!-- app/views/devise/passwords/new.html.erb -->
<div class="max-w-md mx-auto mt-12 bg-white p-6 rounded-xl shadow-md">
<!-- Logo Placeholder -->
  <div class="mb-4 text-center">
    <p>ShutterSuites</p>
  </div>
  <h2 class="text-2xl font-bold text-center mb-6">Forgot your password?</h2>

  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4"><%= flash[:alert] %></div>
  <% elsif flash[:notice] %>
    <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4"><%= flash[:notice] %></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Send reset instructions",
            class: "w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to Login", new_session_path(resource_name),
          class: "text-indigo-600 hover:underline text-sm" %>
  </div>
</div>
