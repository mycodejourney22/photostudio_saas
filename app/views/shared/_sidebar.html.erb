<!-- app/views/shared/_sidebar.html.erb - Updated with Expenses -->
<div class="flex flex-col h-full sidebar-container">
  <!-- Studio Header -->
  <div class="p-6 border-b border-white border-opacity-20">
    <div class="flex items-center">
      <div class="w-10 h-10 bg-white bg-opacity-20 rounded-xl flex items-center justify-center mr-3 flex-shrink-0">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <h2 style="color: white !important;" class="font-semibold text-lg truncate sidebar-title">
          <%= current_tenant.name %>
        </h2>
        <p style="color: rgba(255, 255, 255, 0.75) !important;" class="text-sm sidebar-subtitle">
          <%= current_tenant.plan_type.humanize %> Plan
        </p>
      </div>
    </div>
  </div>

  <!-- Navigation Links -->
  <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto sidebar-nav">
    <!-- Dashboard -->
    <a href="<%= dashboard_path %>"
       class="sidebar-nav-item <%= 'active' if current_page?(dashboard_path) %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Dashboard</span>
    </a>

    <!-- Appointments -->
    <a href="<%= appointments_path %>"
       class="sidebar-nav-item <%= 'active' if current_page?(appointments_path) %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Appointments</span>
    </a>

    <!-- Customers -->
    <a href="<%= customers_path %>"
       class="sidebar-nav-item <%= 'active' if current_page?(customers_path) %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Customers</span>
    </a>

    <!-- Sales -->
    <a href="<%= sales_path %>"
       class="sidebar-nav-item <%= 'active' if current_page?(sales_path) || request.path.include?('sales') %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Sales</span>
    </a>

    <!-- Expenses -->
    <a href="<%= expenses_path %>"
       class="sidebar-nav-item <%= 'active' if current_page?(expenses_path) || request.path.include?('expenses') || request.path.include?('expense_categories') %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Expenses</span>
    </a>


    <!-- Divider -->
    <div class="border-t border-white border-opacity-20 my-4"></div>

    <!-- Reports & Analytics Section Header -->
    <div class="px-3 py-2">
      <h3 class="text-xs font-semibold text-white text-opacity-75 uppercase tracking-wider">
        Reports & Analytics
      </h3>
    </div>

    <!-- Sales Reports -->
    <a href="/reports/sales/monthly"
       class="sidebar-nav-item <%= 'active' if request.path.include?('reports/sales') %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Sales Reports</span>
    </a>

    <!-- Analytics Dashboard -->
    <a href="/analytics"
       class="sidebar-nav-item <%= 'active' if request.path.include?('analytics') %>"
       style="color: white !important; text-decoration: none !important;">
      <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
      </svg>
      <span class="nav-text" style="color: white !important;">Analytics</span>
    </a>

    <!-- Divider -->
    <div class="border-t border-white border-opacity-20 my-4"></div>

    <!-- Admin & Setup Section (for authorized users) -->
    <% if current_user.role_in_tenant(current_tenant).in?(['admin', 'owner']) %>
      <!-- Section Header -->
      <div class="px-3 py-2">
        <h3 class="text-xs font-semibold text-white text-opacity-75 uppercase tracking-wider">
          Administration
        </h3>
      </div>

      <!-- Setup -->
      <a href="/admin/setup"
         class="sidebar-nav-item <%= 'active' if request.path.include?('admin/setup') %>"
         style="color: white !important; text-decoration: none !important;">
        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
        </svg>
        <span class="nav-text" style="color: white !important;">Setup</span>
      </a>

       <!-- Settings -->
      

      <!-- Branding -->
      <a href="/settings/branding/edit"
         class="sidebar-nav-item <%= 'active' if request.path.include?('branding') %>"
         style="color: white !important; text-decoration: none !important;">
        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
        </svg>
        <span class="nav-text" style="color: white !important;">Branding</span>
      </a>
    <% end %>
  </nav>

  <!-- User Menu -->
  <div class="p-4 border-t border-white border-opacity-20" data-testid="user-menu-section">
    <div class="flex items-center">
      <div class="w-10 h-10 bg-white bg-opacity-20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
        <span style="color: white !important;" class="font-medium text-sm">
          <%= current_user.first_name.first %><%= current_user.last_name.first %>
        </span>
      </div>
      <div class="flex-1 min-w-0">
        <p style="color: white !important;" class="font-medium text-sm truncate">
          <%= current_user.first_name %> <%= current_user.last_name %>
        </p>
        <p style="color: rgba(255, 255, 255, 0.75) !important;" class="text-xs truncate">
          <%= current_user.role_in_tenant(current_tenant).humanize %>
        </p>
      </div>

      <!-- User Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button data-action="dropdown#toggle"
                class="flex items-center text-white hover:text-gray-200 focus:outline-none">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
          </svg>
        </button>

        <div data-dropdown-target="menu"
             class="hidden absolute bottom-full left-0 mb-2 w-48 py-2 bg-white rounded-lg shadow-xl z-50">
          <%= link_to edit_user_registration_path,
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Profile Settings
          <% end %>

          <div class="border-t border-gray-100 my-1"></div>

          <%= link_to destroy_user_session_path, method: :delete,
                class: "block px-4 py-2 text-sm text-red-600 hover:bg-red-50" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            Sign Out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .nav-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-right: 0.75rem;
    flex-shrink: 0;
  }

  .nav-text {
    font-weight: 500;
    font-size: 0.875rem;
    color: white !important;
  }

  .sidebar-nav-item {
    display: flex !important;
    align-items: center !important;
    padding: 12px 16px !important;
    margin: 4px 0 !important;
    border-radius: 8px !important;
    transition: all 0.2s ease-in-out !important;
    text-decoration: none !important;
    color: white !important;
  }

  .sidebar-nav-item:hover {
    background-color: rgba(255, 255, 255, 0.1) !important;
    text-decoration: none !important;
    color: white !important;
  }

  .sidebar-nav-item.active {
    background-color: rgba(255, 255, 255, 0.2) !important;
  }

  .sidebar-nav-item svg {
    color: white !important;
  }

  .sidebar-nav-item span {
    color: white !important;
  }

  /* Force all text in sidebar to be white */
  .sidebar-container * {
    color: white !important;
  }
</style>
